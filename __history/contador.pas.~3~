unit contador;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm_contador = class(TForm)
    lb_cont: TLabel;
    btn_contar: TButton;
    procedure btn_contarClick(Sender: TObject);
  private
    { Private declarations }
    var cont :integer;
  public
    { Public declarations }
  end;

var
  Form_contador: TForm_contador;

implementation

{$R *.dfm}

procedure TForm_contador.btn_contarClick(Sender: TObject);
    begin
    for cont := 1 to 5 do //Repetição básica: Escolhi repetição de 1 para 5 (5x).
    begin
      ShowMessage(IntToStr(cont));
    end;

end;

end.
